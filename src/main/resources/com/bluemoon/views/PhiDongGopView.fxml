<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bluemoon.controllers.PhiDongGopController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="QUẢN LÝ PHÍ ĐÓNG GÓP" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Tìm kiếm:" />
                        <TextField fx:id="searchField" prefWidth="250.0" promptText="Nhập tên quỹ hoặc mã hộ..." />
                        <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #3498db;" text="Tìm" textFill="WHITE" />
                        <Button mnemonicParsing="false" onAction="#handleRefresh" style="-fx-background-color: #f39c12;" text="Làm mới" textFill="WHITE" />
                    </children>
                </HBox>

                <TableView fx:id="tablePhiDongGop" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMaHo" prefWidth="100.0" text="Mã Hộ" />
                        <TableColumn fx:id="colTenKhoanThu" prefWidth="250.0" text="Tên Khoản Đóng Góp" />
                        <TableColumn fx:id="colSoTien" prefWidth="150.0" text="Số Tiền (VND)" />
                        <TableColumn fx:id="colNgayDong" prefWidth="150.0" text="Ngày Đóng" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleAdd" prefHeight="35.0" style="-fx-background-color: #2ecc71;" text="Thêm Đóng Góp Mới" textFill="WHITE">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>