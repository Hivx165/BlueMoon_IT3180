<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bluemoon.controllers.LoginController">
    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="250.0" style="-fx-background-color: #3f51b5;">
            <children>
                <Label text="BLUE MOON" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label text="Apartment Manager" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <VBox alignment="CENTER_LEFT" layoutX="250.0" prefHeight="400.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label text="LOGIN" textFill="#3f51b5">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <Label text="Username:" />
                <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập" />

                <Label text="Password:" />
                <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" />

                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="35.0" prefWidth="270.0" style="-fx-background-color: #3f51b5;" text="Đăng nhập" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>