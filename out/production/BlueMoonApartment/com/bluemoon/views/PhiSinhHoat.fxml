<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.bluemoon.controllers.PhiSinhHoatController">
    <top>
        <Label text="QUẢN LÝ PHÍ SINH HOẠT" BorderPane.alignment="CENTER">
            <font><Font size="20"/></font>
            <padding><Insets top="10" bottom="10"/></padding>
        </Label>
    </top>

    <center>
        <TableView fx:id="tablePhi" prefHeight="350">
            <columns>
                <TableColumn fx:id="colMaHoKhau" text="Mã Hộ Khẩu" prefWidth="100"/>
                <TableColumn fx:id="colThang" text="Tháng" prefWidth="60"/>
                <TableColumn fx:id="colNam" text="Năm" prefWidth="70"/>
                <TableColumn fx:id="colDien" text="Tiền Điện" prefWidth="120"/>
                <TableColumn fx:id="colNuoc" text="Tiền Nước" prefWidth="120"/>
                <TableColumn fx:id="colTong" text="Tổng Tiền" prefWidth="150"/>
                <TableColumn fx:id="colTrangThai" text="Trạng Thái" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <Label text="Mã Hộ Khẩu:"/>
                <TextField fx:id="txtMaHoKhau" GridPane.columnIndex="1" promptText="Nhập mã hộ khẩu"/>

                <Label text="Tháng:" GridPane.rowIndex="1"/>
                <TextField fx:id="txtThang" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Năm:" GridPane.rowIndex="2"/>
                <TextField fx:id="txtNam" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Tiền Điện:" GridPane.rowIndex="3"/>
                <TextField fx:id="txtTienDien" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Tiền Nước:" GridPane.rowIndex="4"/>
                <TextField fx:id="txtTienNuoc" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Tạo Hóa Đơn" onAction="#handleAdd" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                <Button text="Thanh Toán" onAction="#handlePay" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="Xóa" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>