<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bluemoon.controllers.HoKhauController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" prefHeight="560.0" prefWidth="860.0" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="QUẢN LÝ HỘ KHẨU" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Tìm kiếm:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="searchField" prefHeight="35.0" prefWidth="350.0" promptText="Nhập mã hộ hoặc địa chỉ..." />
                        <Button mnemonicParsing="false" onAction="#handleSearch" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #3498db;" text="Tìm" textFill="WHITE" />
                        <Button mnemonicParsing="false" onAction="#handleRefresh" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #f39c12;" text="Làm mới" textFill="WHITE" />
                    </children>
                </HBox>

                <TableView fx:id="hoKhauTable" prefHeight="400.0" prefWidth="860.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMaHoKhau" prefWidth="100.0" text="Mã Hộ Khẩu" />
                        <TableColumn fx:id="colTenChuHo" prefWidth="200.0" text="Tên Chủ Hộ" />
                        <TableColumn fx:id="colDiaChi" prefWidth="250.0" text="Địa Chỉ" />
                        <TableColumn fx:id="colNgayLap" prefWidth="120.0" text="Ngày Lập" />
                        <TableColumn fx:id="colDienTich" prefWidth="120.0" text="Diện Tích (m2)" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleAdd" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2ecc71;" text="Thêm Hộ Khẩu" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>

<!--                        <Button mnemonicParsing="false" onAction="#handleEdit" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #9b59b6;" text="Sửa" textFill="WHITE">-->
<!--                            <font>-->
<!--                                <Font name="System Bold" size="14.0" />-->
<!--                            </font>-->
<!--                        </Button>-->

                        <Button mnemonicParsing="false" onAction="#handleDelete" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #e74c3c;" text="Xóa" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>