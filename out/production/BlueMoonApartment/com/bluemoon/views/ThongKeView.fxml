<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bluemoon.controllers.ThongKeController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="THỐNG KÊ NHÂN KHẨU" textFill="#2c3e50">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label text="Tổng số cư dân hiện có:">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <Label fx:id="lblTongSo" text="0" textFill="#e74c3c">
                            <font><Font name="System Bold" size="24.0" /></font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#loadData" style="-fx-background-color: #3498db;" text="Làm mới dữ liệu" textFill="WHITE">
                            <font><Font name="System Bold" size="12.0" /></font>
                        </Button>
                    </children>
                </HBox>

                <TableView fx:id="tableThongKe" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colHoTen" prefWidth="200.0" text="Họ và Tên" />
                        <TableColumn fx:id="colCCCD" prefWidth="150.0" text="CCCD/CMND" />
                        <TableColumn fx:id="colGioiTinh" prefWidth="100.0" text="Giới Tính" />
                        <TableColumn fx:id="colDiaChi" prefWidth="350.0" text="Địa chỉ đang ở" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>